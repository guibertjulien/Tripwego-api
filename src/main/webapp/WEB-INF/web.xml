<?xml version="1.0" encoding="utf-8" standalone="no"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>EndpointsServlet</servlet-name>
        <servlet-class>com.google.api.server.spi.EndpointsServlet</servlet-class>
        <init-param>
            <param-name>services</param-name>
            <param-value>com.tripwego.api.placeresult.PlaceResultEndpoint,
                com.tripwego.api.tag.TagEndpoint,
                com.tripwego.api.trip.TripEndpoint,
                com.tripwego.api.region.RegionCounterEndpoint,
                com.tripwego.api.user.UserEndpoint
            </param-value>
        </init-param>
        <init-param>
            <param-name>restricted</param-name>
            <param-value>false</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>EndpointsServlet</servlet-name>
        <url-pattern>/_ah/api/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Add a filter that fetches the service config from service management. -->
    <filter>
        <filter-name>endpoints-api-configuration</filter-name>
        <filter-class>com.google.api.control.ServiceManagementConfigFilter</filter-class>
    </filter>

    <!-- Add a filter that performs Endpoints logging and monitoring. -->
    <filter>
        <filter-name>endpoints-api-controller</filter-name>
        <filter-class>com.google.api.control.extensions.appengine.GoogleAppEngineControlFilter</filter-class>
        <init-param>
            <param-name>endpoints.projectId</param-name>
            <param-value>${endpoints.project.id}</param-value>
        </init-param>
        <init-param>
            <param-name>endpoints.serviceName</param-name>
            <param-value>tripendpoint-api.endpoints.${endpoints.project.id}.cloud.goog</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>endpoints-api-configuration</filter-name>
        <servlet-name>EndpointsServlet</servlet-name>
    </filter-mapping>

    <filter-mapping>
        <filter-name>endpoints-api-controller</filter-name>
        <servlet-name>EndpointsServlet</servlet-name>
    </filter-mapping>

    <!-- CRON Servlet -->
    <servlet>
        <servlet-name>CountTripByRegionServlet</servlet-name>
        <servlet-class>com.tripwego.api.batch.CountTripByRegionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CountTripByRegionServlet</servlet-name>
        <url-pattern>/cron/countTripByRegion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTripsWithUserUnknownServlet</servlet-name>
        <servlet-class>com.tripwego.api.batch.DeleteTripsWithUserUnknownServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTripsWithUserUnknownServlet</servlet-name>
        <url-pattern>/cron/deleteTripsWithUserUnknownServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteTripsCancelledOneMonthAgoServlet</servlet-name>
        <servlet-class>com.tripwego.api.batch.DeleteTripsCancelledOneMonthAgoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTripsCancelledOneMonthAgoServlet</servlet-name>
        <url-pattern>/cron/deleteTripsCancelledOneMonthAgoServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RefreshServlet</servlet-name>
        <servlet-class>com.tripwego.api.batch.RefreshServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RefreshServlet</servlet-name>
        <url-pattern>/cron/refreshServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StoreTripsInDocumentServlet</servlet-name>
        <servlet-class>com.tripwego.api.batch.StoreTripsInDocumentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StoreTripsInDocumentServlet</servlet-name>
        <url-pattern>/cron/storeTripsInDocumentServlet</url-pattern>
    </servlet-mapping>

    <!-- Securing URLs for CRON -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>cron</web-resource-name>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>
